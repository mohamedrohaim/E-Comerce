@model IEnumerable<Brand>
@{
    ViewData["Title"] = "Brands";
}
<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Tables</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Brands</li>
        </ol>
        <a asp-action="" asp-route-id="" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i>  
            Add New Brand

	</a>
        @if (Model.Count() > 0)
        {
            <div class="card mb-4 mt-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Brandas Table
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Brand id</th>
                            <th>Brand Name</th>
                            <th>Update</th>
                            <th>Delete</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                            @foreach(var brand in Model)
                            {
                             <tr>
                                    <td>@Html.DisplayFor(M=>brand.brand_id)</td>
                                    <td>@Html.DisplayFor(M=>brand.brand_name)</td>
                          @*  <td>
                                <a asp-action="Details" asp-route-id="" class="btn btn-success">
                                    <i class="fas fa-eye"></i>  Details

                                </a>
							</td>*@
                            <td>
                                <a asp-action="Edit" asp-route-id="" class="btn btn-warning">
                                    <i class="fas fa-edit"></i>  Update
                                </a>
                            </td>
                           <td>
                                <a asp-action="Delete" asp-route-id="" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
							
                        </tr>
                     
                            
                            }
                        </tbody>
                </table>
            </div>
        </div>
        }
        
    </div>
