@model Category
@{
    ViewData["Title"] = "Update Categoty";
}
<div class="mt-4 ml-3">
    <h2>Are You Sure You want to Update this Brand ?</h2>
    <form asp-action="Update">
        <div class="form-group">
            <input hidden asp-for="@Model.category_id" />
            <label asp-for="@Model.category_name"></label>
            <input asp-for="@Model.category_name" class="form-control" >
        </div>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
        <button type="submit" class="btn btn-primary ml-2">Update</button>
    </form>
</div>