@model ProductDetails
@{
    ViewData["Title"] = "Update Categoty";
    Layout = "_Layout";
}
@inject IBrandRepository brandRepository;
@inject ICategoryRepository categoryRepository;
@{

    //var listOfBrands = ViewData["MyList"];
    var brands = new SelectList(brandRepository.GetAll(), "brand_id", "brand_name");
    var categories = new SelectList(categoryRepository.GetAll(), "category_id", "category_name");
}

<div class="mt-4 ml-3">
    <h2>Are You Sure You want to delete this product</h2>
    <section class="row justify-content-between">
        <div class="col-md-5">
            <form asp-action="Delete">
                <div>

                    <div class="form-group" hidden>
                        <input hidden asp-for="@Model.product_id" />

                    </div>
                    <div class="form-group ">
                        <label>Product</label>
                        <input asp-for="@Model.product_name" class="form-control" readonly>
                    </div>
                    <div class="form-group ">
                        <label>Category</label>
                        <input asp-for="@Model.category_name" class="form-control" readonly>
                    </div>

                    <div class="form-group ">
                        <label>Brand</label>
                        <input asp-for="@Model.brand_name" class="form-control" readonly>
                    </div>



                    <div class="form-group">

                        <label>Price</label>
                        <input asp-for="@Model.price" class="form-control" type="number" readonly>
                    </div>


                    <div class="form-group">

                        <label>Quantity</label>
                        <input asp-for="@Model.quantity" class="form-control" type="number" readonly>
                    </div>


                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" asp-for="@Model.description" rows="3" maxlength="255" readonly></textarea>
                    </div>
                    <br />
                    <br />
                    <a asp-action="Index" class="btn btn-light">
                        <i class="bi bi-check2"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary ml-2">
                        <i class="bi bi-x"></i>
                        Delete
                    </button>

                </div>
            </form>
        </div>

        <div class="col-md-6 image" style="background-image:url(data:image\/*;base64,@(Convert.ToBase64String(Model.image))); background-repeat: no-repeat;">
        </div>



    </section>
    <br />
    <br />
</div>
 </section>